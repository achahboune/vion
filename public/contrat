<body>
  <div class="container">
    <h2>ü§ù Contract Preview</h2>
    <pre id="contractText">Loading contract...</pre>
    <button id="signBtn">Send for Signature</button>
  </div>

  <script>
    async function fetchContract() {
      const res = await fetch("/generate-contract");
      const data = await res.json();
      document.getElementById("contractText").textContent = data.contract || "Error loading contract.";
    }

    document.getElementById("signBtn").addEventListener("click", async () => {
      const res = await fetch("/sign-pdf", { method: "POST" });
      const data = await res.json();
      if (data.signUrl) {
        window.location.href = data.signUrl;
      } else {
        alert("Error generating signature link.");
      }
    });

    fetchContract();
  </script>
</body>
